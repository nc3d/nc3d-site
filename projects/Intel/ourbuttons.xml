	<events onkeydown="keydown()" />
	
	<action name="keydown">
	trace('keycode=',keycode);
	if (keycode == 83, set(layer[OurButton_bar].alpha, '1.0'); set(layer[skin_logo].alpha, '1.0'););
	if (keycode == 72, set(layer[OurButton_bar].alpha, '0.0'); set(layer[skin_logo].alpha, '0.0'););
	if (keycode == 48, set(myphase,0);setviews(););
	if (keycode == 49, set(myphase,1);setviews(););
	if (keycode == 50, set(myphase,2);setviews(););
	if (keycode == 51, set(myphase,3);setviews(););
	if (keycode == 52, set(myphase,4);setviews(););
	if (keycode == 53, set(myphase,5);setviews(););
	if (keycode == 54, set(myphase,M);setviews(););
	</action>

	<action name="setviews">
		changeviews(get(mycamera),get(myphase))
		</action>
	<action name="changeviews">
		loadscene(scene_510_Pano_%1_Phase_%2_0000, null, MERGE, BLEND(1));
		</action>
